/* content部分 */
.content {
  background: #fff;
  /* border: 1px solid #ccc; */
  border-radius: 4px;
  box-shadow: 0 0 2px #ccc;
  margin-bottom: 10px;
  margin-left: 10px;
  margin-right: 10px;
}

.content-title {
  height: 45px;
  line-height: 45px;
  position: relative;
  background: #F7F7F7;
}

  
.content-title text {
  font-size: 14px;
  color: #aaa;
  margin-left: 30px;
  position: relative;
}

.content-title::after {
  content: "";
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  border-bottom: 1px solid #ddd;
}

.content-title text::before {
  content: "";
  position: absolute;
  left: -19px;
  top: 2px;
  width: 15px;
  height: 15px;
  background: url("/image/list-numbered.png") 100%/100%;
}

.content-main {
  display: flex;
  height: 90px;
  position: relative;
}

.content-main .number {
  flex: 1;
}

.content-main::after {
  content: "";
  width: 95%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  border-bottom: 1px solid #ddd;
}

.content-main .number .number-amount, .content-main .number .number-text {
  display: inline-block;
  width: 100%;
  text-align: center;
}

.content-main .number .number-amount {
  line-height: 60px;
  font-size: 30px;
  color: #46adf4;
}

.content-main .number .number-text {
  color: #999;
}

.content-bottom {
  line-height: 40px;
  position: relative;
}

.content-bottom .content-bottom-image {
  width: 24px;
  height: 24px;
  vertical-align: middle;
  border-radius: 50%;
  margin-left: 14px;
  margin-right: 7px;
}

.content-bottom .content-bottom-text {
  color: #46adf4;
  font-size: 13px;
}

.right-arrow {
  position: absolute;
  right: 15px;
}

/* 列表部分 */
.list {
  /* border: 1px solid #ccc; */
  border-radius: 4px;
  box-shadow: 0 0 2px #ccc; 
  margin: 0 10px 0;
}

.list-header {
  height: 45px;
  line-height: 45px;
  position: relative;
}

.list-header .header-title {
  font-size: 14px;
  color: #aaa;
  margin-left: 30px;
  position: relative;
}

.list-header::after {
  content: "";
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  border-bottom: 1px solid #ddd;
}

.list-header .header-title::before {
  content: "";
  position: absolute;
  left: -19px;
  top: 2px;
  width: 15px;
  height: 15px;
  background: url("/image/database.png") 100%/100%;
}

.list-header .header-text {
  float: right;
  margin-right: 34px;
  color: #46adf4;
}

/* 列表样式复写 */
.list-item {
  position: relative;
}

.list-item::after {
  content: "";
  width: 95%;
  left: 50%;
  transform: translateX(-50%);
  position: absolute;
  bottom: 0;
  border-bottom: 1px solid #ddd;
}

.am-list-line-bottom {
  display: none;
}

.am-list-extra {
  position: absolute;
  top: 13px;
  right: 14px;
}

.am-list-thumb {
  border-radius: 50%;
}

