.page {
  padding-bottom: 10px;
}

.am-tabs-bar {
  height: 40px;
}

.am-tabs-bar-content-fixed {
  height: 40px;
}

.am-tabs-bar-tab {
  height: 40px;
  font-size: 14px;
  font-weight: bold;
}

.search-filter {
  display: flex;
  position: sticky;
  top: 0;
  z-index: 19;
  background: #efeff4;
}

.page-section-demo {
  flex: 1;
  padding: 0;
  background: #fff;
}

.search-outer {
  box-sizing: border-box;
  display:flex;
  height:40px;
  overflow:hidden;
  padding: 8px 10px 8px 0;
  border-bottom: 1px solid #ddd;
  background-color: #efeff4;
}

.search-outer * {
  box-sizing: border-box;
}

.search-input {
  flex:1;
  text-align: left;
  display: block;
  color: #000;
  height: 24px;
  font-size: 15px;
  background-color: #fff;
  border-color: transparent;
}

.focus.search-cancel {
  margin-right: 0;
  opacity: 1;
}

.search-cancel {
  margin-right:-40px;
  display: inline-block;
  opacity: 0;
  padding-left: 8px;
  height: 24px;
  line-height: 24px;
  font-size: 16px;
  color: #108ee9;
  text-align: right;
  transition: margin-right .3s,opacity .3s;
  transition-delay: .1s;
}

.select {
  height: 40px;
  width: 54px;
  position: relative;
  background: url('/image/filter.png') no-repeat center;
  background-size: 20px 20px;
}

.list {
  /* border: 1px solid #ccc; */
  border-radius: 4px;
  box-shadow: 0 0 2px #ccc; 
  margin: 0;
}

/* 列表样式复写 */
.list-item {
  position: relative;
}

.list-item::after {
  content: "";
  width: 95%;
  left: 50%;
  transform: translateX(-50%);
  position: absolute;
  bottom: 0;
  border-bottom: 1px solid #ddd;
}

.am-list-line-bottom {
  display: none;
}

.am-list-extra {
  position: absolute;
  top: 0px;
  right: 19px;
}

.am-list-thumb {
  border-radius: 50%;
}

.am-list-content {

}
/* 列表样式复写完成 */

.list-item .name {
  font-size: 14px;
  font-weight: bolder;
}

.brief-title {
  font-size: 13px;
  color: rgb(70, 173, 244);
}

.brief-bottom {
  font-size: 12px;
}

.brief-bottom-right {
  float: right;
  color: #888;
  margin-top: -14px;
}

.brief-content {
  margin-top: 4px;
  font-size: 12px;
}

.extra {
  color: #46adf4;
  font-weight: bold;
  font-size: 13px;
}

.like-title {
  line-height: 40px;
  text-align: center;
  color: rgb(70, 173, 244);
  background: #fff;
}

.like-title text {
  display: block;
}

.item-user {
  margin-bottom: 14px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}